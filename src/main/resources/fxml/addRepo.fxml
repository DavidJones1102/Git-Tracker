<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.io.gittracker.controllers.RepoInputPresenter">
   <GridPane vgap="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
            <Label text="Enter repository address:" GridPane.rowIndex="1" />
            <TextField fx:id="inputRepo" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Workspace:" GridPane.rowIndex="2" />
            <ComboBox fx:id="inputWorkspace" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label disable="true" text="Group:" GridPane.rowIndex="3" />
            <TextField disable="true" fx:id="inputGroup" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <Label alignment="CENTER" text="Add new repository" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
            <Button fx:id="confirmButton" onMouseClicked="#handleConfirm" text="Confirm" GridPane.rowIndex="5" />
            <Button fx:id="cancelButton" onMouseClicked="#handleCancel" text="Cancel" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
      </children>
   </GridPane>
</AnchorPane>
